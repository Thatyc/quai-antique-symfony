{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	{% include "partials/_header.html.twig" %}
    <div class="container">
      <div class="row">
        <div class="col-md-6 mt-5 offset-md-3">
            <div class="p-lg-5">
              <div class="mb-3">
                {{ form_start(registrationForm) }}
					  <h2 class="mt-5">Créer un compte</h2>
                      {{ form_row(registrationForm.email, {label: 'Email'}) }}
			  </div>
			  <div class="form-group">
			   {{ form_row(registrationForm.name, {label: 'Nom'}) }}
			  </div>
			  <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'}) }}					
              </div>
			  <div class="text-center"><button id="btn-connexion" type="submit" class="btn px-5 mb-5 w-75">Créer un compte</button>
                {{ form_end(registrationForm) }}
			  </div>
            </div>
        </div>
      </div>
    </div>
{% include "partials/_footer.html.twig" %}

{% endblock %}


 
 

  
		