{% extends 'base.html.twig' %}

{% block title %}Créez un compte * Quai-Antique{% endblock %}

{% block body %}
	{% include "partials/_header.html.twig" %}
    <div id="register-form" class="container mt-3 mb-3">
      <div class="row">
        <div class="col-md-6 mt-5 offset-md-3 d-flex justify-content-center">
            <div class="p-lg-5">
              <div class="mb-3">
                {{ form_start(registrationForm) }}
					       <h2 class="mt-5">Créer un compte</h2>
                  <div class="form-group mt-3">
                      {{ form_row(registrationForm.email, {label: 'Email'}) }}
                  </div>
			            <div class="form-group  mt-3">
			             {{ form_row(registrationForm.name, {label: 'Nom'}) }}
			            </div>
			            <div class="form-group mt-3">
                   {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'}) }}					
                  </div>
                  <div class="form-group mt-3">
                  {{ form_row(registrationForm.agreeTerms, {
                  label: 'J\'accepte les termes d\'utilisation'}) }}
                  </div>
			            <div class="text-center"><button id="btn-connexion" type="submit" class="btn px-5 mt-3 mb-5 w-75">Créer un compte</button>
                   {{ form_end(registrationForm) }}
			            </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  {% include "partials/_footer.html.twig" %}
{% endblock %}


 
 

  
		