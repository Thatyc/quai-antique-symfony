{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	{% include "partials/_header.html.twig" %}
    <div id="main-connexion" class="container">
			<div class="row">
			  <div class="col-md-6 mt-5 offset-md-3">
				<div class="card  my-5">
				  <div class="card-body cardbody-color p-lg-5">
					<div class="mb-3">
                     {{ form_start(registrationForm) }}
					  <h2 class="text-center text-dark mt-5">Créer un compte</h2>
                      {{ form_row(registrationForm.email) }}
					</div>
					<div class="form-group">
					{{ form_row(registrationForm.name) }}
					</div>
					<div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                     label: 'Password'}) }}					
                     </div>
					<div class="text-center"><button id="btn-connexion" type="submit" class="btn px-5 mb-5 w-75">Créer un compte</button>
                    {{ form_end(registrationForm) }}
					</div>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
    {% include "partials/_footer.html.twig" %}

{% endblock %}

 
 

  
		